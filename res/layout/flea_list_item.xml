<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/listitem_selector"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="3dp">

    <LinearLayout 
        android:layout_marginTop="@dimen/y4"
        android:layout_marginBottom="@dimen/y5"
        android:layout_marginRight="@dimen/y3"
        android:layout_marginLeft="@dimen/y1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
 <!-- 左侧的图片  -->

   <com.loopj.android.image.SmartImageView
        android:id="@+id/iv_flea_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/y2"
    />  
   


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/ItemErShou_Title_Style"
            android:id="@+id/tv_flea_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x2"/>
        
       <LinearLayout  
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" 
         android:gravity="bottom">
         
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

         <TextView
                android:id="@+id/tv_flea_id_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:visibility="gone" /> 

          <TextView
                android:id="@+id/tv_flea_price_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格面议"
                android:textColor="@color/Item_RED"
                android:textSize="@dimen/Ttem_Liter"
                android:ellipsize="end"
                android:maxLines="1" />
          <TextView
                android:id="@+id/statusShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/Item_RED"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="已截止"
                android:background="@drawable/tag_background"
                android:textSize="@dimen/TIME_TITLE" />
        </RelativeLayout>
      

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"           
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_flea_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[数码产品]"
                android:textColor="@color/Item_blue"
                android:textSize="@dimen/TIME_TITLE" />

            <TextView
                android:id="@+id/tv_flea_date_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/GRAY_TITLE"
                android:text="2016年3月23日"
                android:textSize="@dimen/TIME_TITLE" />
	        </LinearLayout>
	     </LinearLayout>
	   </LinearLayout>
	 </LinearLayout>

  </LinearLayout>
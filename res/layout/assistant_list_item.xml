<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x4"
    android:paddingLeft="@dimen/x3"
    android:paddingRight="@dimen/x3"
    android:paddingTop="@dimen/x4"
    android:background="@drawable/listitem_selector"
    android:textSize="16sp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/assistant_list_item_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="安卓开发"
            android:textColor="@color/Item_Title"
            android:textSize="@dimen/Item_Title_Size" />

       
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/assistant_list_item_pubFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="信息化办公室"
            android:textColor="@color/GRAY_TITLE" 
            android:textSize="@dimen/Ttem_Liter"/>
        
         <TextView
            android:id="@+id/assistant_list_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/assistant_list_item_pubFrom"
            android:layout_marginLeft="10dp"
            android:text="47人"
            android:textColor="@color/GRAY_TITLE"
            android:textSize="@dimen/Ttem_Liter" />

        <TextView
            android:id="@+id/assistant_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016-03-21"
            android:textColor="@color/GRAY_TITLE"
            android:textSize="@dimen/Ttem_Liter" />
    </RelativeLayout>

    <TextView
        android:id="@+id/assistant_list_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:visibility="gone" />

</LinearLayout>
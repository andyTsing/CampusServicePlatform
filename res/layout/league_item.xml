<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/listitem_selector"
    android:paddingTop="10dp"  >    <View
        android:id="@+id/league_item_image"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="@drawable/test_img" />
    
    <TextView
        android:id="@+id/league_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="玉兔辞岁龙献瑞，师生共迎元宵节"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/league_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="[南新社]"
            android:textColor="#A7C5EA"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/league_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="A203"
            android:textColor="#A7C5EA"
            android:textSize="10sp" />
        
        <TextView
            android:id="@+id/league_item_Participant_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="已有800人报名"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#E6E6E6" />
</LinearLayout>

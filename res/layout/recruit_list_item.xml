<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_selector"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x5"
    android:paddingLeft="@dimen/x4"
    android:paddingRight="@dimen/x4"
    android:paddingTop="@dimen/x5"
    android:textSize="16sp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/recruit_list_item_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="移动应用UI设计师"
            android:textColor="@color/Item_Title"
            android:textSize="@dimen/Item_Title_Size" />

        <TextView
            android:id="@+id/recruit_list_item_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="10000-14999/月"
            android:textColor="#e0a229"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5" 
           >

        <TextView
            android:id="@+id/recruit_list_item_pubFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="腾讯公司"
            android:textColor="@color/GRAY_TITLE" />

        <TextView
            android:id="@+id/recruit_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016-03-21"
            android:textColor="@color/GRAY_TITLE" />
    </RelativeLayout>

    <TextView
        android:id="@+id/recruit_list_item_id"
        android:layout_width="wrap_content"	
        android:layout_height="wrap_content"
        android:text="id"
        android:visibility="gone" />

</LinearLayout>
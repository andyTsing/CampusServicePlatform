<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/listitem_selector"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"    
        android:layout_marginTop="@dimen/x8"
    	android:layout_marginBottom="@dimen/x8"
    	android:layout_marginLeft="@dimen/x8"
    	android:layout_marginRight="@dimen/x8" >

        <TextView
            android:id="@+id/notice_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/Item_Title"
            android:textSize="@dimen/Item_Title_Size"
             ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_notice_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:visibility="gone" />

            <TextView
                android:id="@+id/notice_item_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Item_blue"
                android:textSize="@dimen/TIME_TITLE" 
                android:layout_marginLeft="@dimen/x1"/>

            <TextView
                android:id="@+id/notice_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/GRAY_TITLE"
                android:textSize="@dimen/TIME_TITLE" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
